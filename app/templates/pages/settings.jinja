{% extends 'layouts/base.jinja' %}
{% block content %}
<div class="card mb-3">
	<div class="card-body">
        <form>
            <div class="form-group mb-3">
                <label class="form-label" for="exampleFormControlInput1">Issuing Agent</label>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">https://</span>
                    {{ form.issuer_endpoint(class="form-control", placeholder="Public Endpoint") }}
                </div>
                {{ form.issuer_api(class="form-control", placeholder="Api Endpoint") }}
                {{ form.issuer_api_key(class="form-control", placeholder="Api Key") }}
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="exampleFormControlInput1">Verifying Agent</label>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">https://</span>
                    {{ form.verifier_endpoint(class="form-control", placeholder="Public Endpoint") }}
                </div>
                {{ form.verifier_api(class="form-control", placeholder="Api Endpoint") }}
                {{ form.verifier_api_key(class="form-control", placeholder="Api Key") }}
            </div>
            {{ form.submit(class="btn btn-outline-theme btn-sm w-100px") }}
        </form>
	</div>
	{% include 'widgets/card_arrows.jinja' %}
</div>
{% endblock %}